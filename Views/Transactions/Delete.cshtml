@model ExpenseTracker.Models.Transaction
<style>

    body {
        background-color: #1b1b1b;
        color: #ffffff;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0;
        height: 100vh;
    }

    .whole {
        border-radius: 15px;
        padding: 45px;
        margin: 30px;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
        max-width: 2500px;
    }

    .text {
        font-size: 2.5rem;
        margin-bottom: 20px;
    }

    h4 {
        margin-top: 30px;
    }

    dl.row {
        margin: 30px 0;
        font-size: 1.2rem;
    }

    dt.col-sm-2 {
        margin-bottom: 10px;
    }

    dt.col-sm-10 {
        margin-bottom: 20px;
        margin-left: 0;
    }

    .btn {
        border-collapse: separate;
        border-radius: 12px;
        background-color: #4d4de6;
        color: #ffffff;
        font-family: "Nunito", sans-serif;
        font-optical-sizing: auto;
        font-weight: bold;
        font-style: normal;
        margin: 10px 10px 10px 5px;
        text-decoration: none;
        display: inline-block;
        text-align: center;
        box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.5);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .btn:hover {
            transform: translateY(-10px);
            box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.6);
        }

    .btn-danger {
        background-color: #d9534f;
        border-color: #d43f3a;
    }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

</style>
<body>
<div class="whole">
    <div>
        <h1>Delete Transaction</h1>
    </div>

    <div>
        <!--Description-->
        <h4>Are you sure you want to delete this transaction?</h4>
        <dl class="row">
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Amount
            </dt>
            <dd class="col-sm-10">
                ₱ @Model.Amount.ToString("N2")
            </dd>
            <dt class="col-sm-2">
                Category
            </dt>
            <dd class="col-sm-10">
                @Model.Category
            </dd>
            <dt class="col-sm-2">
                Date
            </dt>
            <dd class="col-sm-10">
                @Model.Date.ToShortDateString()
            </dd>
            <dt class="col-sm-2">
                Type
            </dt>
            <dd class="col-sm-10">
                @(Model.IsIncome ? "Income" : "Expense")
            </dd>
        </dl>

        <!--Delete and Back Buttons-->
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Delete" class="btn btn-danger" />
                <a href="javascript:history.back()" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>
</body>
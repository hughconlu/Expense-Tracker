<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ExpenseTracker</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="stylesheet" href="~/ExpenseTracker.styles.css" asp-append-version="true" />
<style>
   
    #sidebar {
        border-right: 0px solid #ddd;
        box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        height: 100vh;
        position: fixed;
        padding: 20px 0 20px 0;
        background-color: #242425 !important;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .profile {
        text-align:center;
        padding:20px;
    }

    .profile img {
        border-radius: 50%;
        width: 100px;
        height: 100px;
    }

    .profile h3 {
        margin-top: 10px;
        font-size: 1.5rem;
    }

    .nav.flex-column {
        margin-top: 40px;
    }

    .nav-item {
        margin-bottom: 20px;
    }

    #sidebar .nav-link {
        font-size: 1.20rem;
        font-weight: 500;
        text-decoration: none;
        color: #ffffff;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    #sidebar .nav-link:hover {
        border-radius: 15px;
        background-color:#4d4de6;
        color: #cccccc;
        transform: translateY(-10px);
        box-shadow: 2px 4px 12px rgba(0, 0, 0, 0.6);
    }

    .nav-link .material-symbols-outlined {
        margin-right: 10px;
        font-size:1.5rem;
        vertical-align: middle;
    }
    
</style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav id="sidebar" class="col-md-3 col-lg-2 d-md-block bg-light sidebar">
                <div class="profile">
                    <img src="~/images/Hugh.jpg" alt="Profile Picture" />
                    <h3>Hugh Conlu</h3>
                </div>
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="/Transactions/Index">
                                <span class="material-symbols-outlined">
                                    dashboard
                                </span>
                                Dashboard    
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Transactions/OverallTransactionHistory">
                                
                                <span class="material-symbols-outlined">
                                    receipt_long
                                </span>
                                Overall Transaction History
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Transactions/IncomeHistory">
                                <span class="material-symbols-outlined">
                                    payments
                                </span>
                                Income History    
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Transactions/ExpenseHistory">
                                <span class="material-symbols-outlined">
                                    credit_card
                                </span>
                                Expense History    
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
                    <h1 class="h2">@ViewData["Title"]</h1>
                </div>
                <div>
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
